root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{json,*rc}]
indent_size = 2

[*.yml]
indent_size = 2

[*.{xml,html,jsp}]
indent_size = 4

[*.{js,jsx}]
indent_size = 4

[*.{css,scss}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false